<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentWarp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp420"
        android:background="@color/black"
        android:orientation="vertical">


        <View
            android:id="@+id/lineTop"
            style="@style/dialog_Line" />

        <TextView
            android:id="@+id/txtTltie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineTop"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp25"
            android:padding="@dimen/dp10"
            android:text="开通HIFI音乐包月套餐成为会员"
            android:textColor="@color/white"
            android:textSize="@dimen/sp30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_below="@+id/txtTltie"
            android:background="@color/gray_a6" />

        <LinearLayout
            android:id="@+id/warp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/txtTltie"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="@dimen/dp50"
                android:text="标准资费:10元/月"
                android:textColor="@color/red"
                android:textSize="@dimen/sp30" />

            <TextView
                android:id="@+id/txtorign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_one"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp10"
                android:lineSpacingMultiplier="1.2"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp50"
                android:text="(原价:19元/月)"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/warp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp40"
            android:gravity="left"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="@dimen/dp50"

            android:paddingRight="@dimen/dp50"
            android:text="@string/placeOrder_abstruct"
            android:textColor="@color/white"
            android:textSize="@dimen/sp30" />


        <View
            android:id="@+id/line_gray_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_below="@+id/txt_two"
            android:layout_marginTop="@dimen/dp20"
            android:background="@color/gray_a6" />

        <View
            android:id="@+id/lineBotttom"
            style="@style/dialog_Line"
            android:layout_alignParentBottom="true" />


        <TextView
            android:id="@+id/txtRemind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_gray_bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp20"
            android:text="@string/string_remind_ordertip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtRemind"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp30"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/change_button_lock_bg_select"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="确认订购"
                android:textColor="@drawable/selector_item_text_color_for_focus"
                android:textSize="@dimen/sp20" />


            <Button
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/change_button_lock_bg_select"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="取消"
                android:textColor="@drawable/selector_item_text_color_for_focus"
                android:textSize="@dimen/sp20" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>