<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp20"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_grid_ImageView"
        android:layout_width="@dimen/dp182"
        android:layout_height="@dimen/dp182"
        android:scaleType="fitXY"
        android:src="@mipmap/artist_def" />

    <TextView
        android:id="@+id/item_grid_txt"
        android:layout_width="@dimen/dp182"
        android:layout_height="@dimen/dp64"
        android:layout_marginTop="@dimen/dp182"
        android:background="@color/color_d30601"
        android:ellipsize="end"
        android:gravity="center|left"
        android:lines="1"
        android:padding="@dimen/dp10"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" />

</FrameLayout>