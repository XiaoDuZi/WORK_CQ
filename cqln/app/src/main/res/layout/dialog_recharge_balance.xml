<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentWarp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_order_dialog_transparent_"
        android:orientation="vertical" >

        <!-- 标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                android:padding="@dimen/dp4"
                android:text="余额不足，马上充值"
                android:textColor="@color/white"
                android:textSize="@dimen/sp30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_a6" />

            <!-- 中间的内容 -->
            <ImageView
                android:id="@+id/qr_code_img"
                android:layout_marginTop="@dimen/dp20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:src="@mipmap/middle"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginTop="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:text="支付宝扫描充值"/>
        </LinearLayout>

        <!-- <View style="@style/line" />-->

        <LinearLayout
            android:layout_margin="@dimen/dp20"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:padding="@dimen/dp10"
                android:background="@drawable/change_button_lock_bg_select"
                android:text="完成充值"
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_item_text_color_for_focus"
                android:textSize="@dimen/sp20"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp20"/>


            <Button
                android:padding="@dimen/dp10"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/change_button_lock_bg_select"
                android:text="暂不充值"
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_item_text_color_for_focus"
                android:textSize="@dimen/sp20" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>