<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listvie_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp0"
    android:gravity="center"
    android:paddingBottom="@dimen/dp15"
    android:paddingLeft="@dimen/dp30"
    android:paddingTop="@dimen/dp10">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp20" />

    <TextView
        android:id="@+id/textview_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textview_title"
        android:layout_below="@+id/textview_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp20"
        android:text=""
        android:textColor="@drawable/selector_item_text_color_for_focus"
        android:textSize="@dimen/sp18" /><!--android:textColor="@drawable/selector_item_text_color_for_focus"
         android:textColor="@color/gray_white"-->
    <TextView
        android:id="@+id/textview_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textview_describe"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp50"
        android:text=""
        android:textColor="@drawable/selector_item_text_color_for_focus"
        android:textSize="@dimen/sp18" />

</RelativeLayout>