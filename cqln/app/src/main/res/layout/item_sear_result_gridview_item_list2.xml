<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp0"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_grid_ImageView"
        android:layout_width="@dimen/dp180"
        android:layout_height="@dimen/dp180"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@mipmap/artist_def" />

    <TextView
        android:id="@+id/item_grid_txt"
        android:layout_width="@dimen/dp180"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp180"
        android:background="@color/color_d30601"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:padding="@dimen/dp10"
        android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textColor="@color/white"
        android:textSize="@dimen/sp16" /><!-- android:ellipsize="end" android:gravity="center|left" android:padding="@dimen/dp10" android:textColor="@drawable/selector_item_text_color_for_focus"-->

</FrameLayout>