<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp228"
    android:layout_height="@dimen/dp228"
    android:layout_gravity="center"
    android:background="@mipmap/t9_key_board_extendview_bg">

    <Button
        android:id="@+id/btn_center"
        style="@style/t9_keybord_extendview_style"
        android:layout_width="@dimen/dp76"
        android:text=""
        android:layout_height="@dimen/dp76"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_top"
        style="@style/t9_keybord_extendview_style"
        android:layout_width="@dimen/dp76"
        android:layout_height="@dimen/dp76"
        android:text=""
        android:layout_above="@+id/btn_center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_Bottom"
        style="@style/t9_keybord_extendview_style"
        android:layout_width="@dimen/dp76"
        android:text=""
        android:layout_height="@dimen/dp76"
        android:layout_below="@+id/btn_center"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_left"
        style="@style/t9_keybord_extendview_style"
        android:layout_width="@dimen/dp76"
        android:layout_height="@dimen/dp76"
        android:text=""
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_center" />

    <Button
        android:id="@+id/btn_right"
        style="@style/t9_keybord_extendview_style"
        android:layout_width="@dimen/dp76"
        android:text=""
        android:layout_height="@dimen/dp76"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn_center" />


</RelativeLayout>