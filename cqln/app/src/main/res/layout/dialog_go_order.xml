<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentWarp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_order_dialog_transparent_"
        android:orientation="vertical" >

        <!-- 标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                android:padding="@dimen/dp4"
                android:text="订购信息提示"
                android:textColor="@color/white"
                android:textSize="@dimen/sp30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/gray_a6" />

            <!-- 中间的内容 -->
            <com.cq.ln.views.JustifyTextView
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HIFI音乐包月套餐\t\t\t\t标准资费：10元/月
                \n\rHIFi音乐是一款精致的家庭客厅音乐，我们精选艺术价值高。。。
                \n为所有音乐爱好者提供超越MP3的高保真流媒体服务"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/gray_a6"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp300"
                android:layout_marginRight="@dimen/dp300"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_a6"
                android:textSize="@dimen/sp15"
                android:text="温馨提示：该产品订购后一个月有效。。。"/>
        </LinearLayout>

        <!-- <View style="@style/line" />-->

        <LinearLayout
            android:layout_marginTop="@dimen/dp30"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:padding="@dimen/dp10"
                android:background="@drawable/change_button_lock_bg_select"
                android:text="确认订购"
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_item_text_color_for_focus"
                android:textSize="@dimen/sp20"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp20"/>


            <Button
                android:padding="@dimen/dp10"
                android:layout_margin="@dimen/dp20"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/change_button_lock_bg_select"
                android:text="取消订购"
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_item_text_color_for_focus"
                android:textSize="@dimen/sp20" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>