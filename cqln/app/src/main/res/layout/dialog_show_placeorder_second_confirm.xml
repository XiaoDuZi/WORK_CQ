<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentWarp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:descendantFocusability="afterDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/dp750"
        android:layout_height="@dimen/dp420"
        android:background="@color/black"
        android:orientation="vertical">


        <View
            android:id="@+id/lineTop"
            style="@style/dialog_Line" />

        <TextView
            android:id="@+id/txtTltie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineTop"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp10"
            android:text="扣费提示"
            android:layout_marginTop="@dimen/dp25"
            android:textColor="@color/white"
            android:textSize="@dimen/sp30" />

        <TextView
            android:id="@+id/txtAbstruct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTltie"
            android:layout_above="@+id/ll_bottom"
            android:layout_centerInParent="true"
            android:gravity="left"
            android:text="本次操作将扣除您有线电视账户费用请确认您已征得此户户主同意哦!"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="@dimen/dp50"
            android:layout_marginTop="@dimen/dp50"
            android:paddingRight="@dimen/dp50"
            android:textColor="@color/white"
            android:textSize="@dimen/sp25" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/change_button_lock_bg_select"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="确认"
                android:textColor="@drawable/selector_item_text_color_for_focus"
                android:textSize="@dimen/sp20" />


            <Button
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dp20"
                android:background="@drawable/change_button_lock_bg_select"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:text="取消"
                android:textColor="@drawable/selector_item_text_color_for_focus"
                android:textSize="@dimen/sp20" />
        </LinearLayout>

        <View
            style="@style/dialog_Line"
            android:layout_alignParentBottom="true"/>

        <View
            style="@style/dialog_Line_ver"
            android:layout_alignParentLeft="true"
            />

        <View
            style="@style/dialog_Line_ver"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</LinearLayout>